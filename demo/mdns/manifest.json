{
  "manifest_version": 2,
  "version": "2.0",
  "name": "mDNS@libdweb",
  "description": "Extension containing libdweb mDNS API",
  "experiment_apis": {
    "mdns": {
      "schema": "../../src/mdns/mdns.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["mdns"]],
        "script": "../../src/mdns/mdns.js"
      }
    }
  },
  "browser_action": {
    "default_title": "mDNS discovery",
    "default_popup": "./popup.html",
    "theme_icons": [
      {
        "light": "./logo-flyweb-white.svg",
        "dark": "./logo-flyweb-grey.svg",
        "size": 96
      }
    ]
  },
  "icons": {
    "48": "./logo-flyweb-grey.svg",
    "96": "./logo-flyweb-grey.svg"
  }
}
